        {
            "name": "Complete Analysis",
            "item": [
                {
                    "name": "Full Threat Analysis",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status is 200\", () => {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "pm.test(\"Threat assessment included\", () => {",
                                    "    const response = pm.response.json();",
                                    "    pm.expect(response).to.have.property('threat_category');",
                                    "});",
                                    "",
                                    "pm.test(\"Threat score is valid\", () => {",
                                    "    const response = pm.response.json();",
                                    "    const score = response.threat_score;",
                                    "    pm.expect(score).to.be.within(0, 100);",
                                    "});",
                                    "",
                                    "if (pm.response.json().threat_category === 'HIGH') {",
                                    "    pm.test(\"High threat detected correctly\", () => {",
                                    "        pm.expect(pm.response.json().threat_category).to.be.oneOf(['HIGH', 'CRITICAL']);",
                                    "    });",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "content_type",
                                    "value": "email",
